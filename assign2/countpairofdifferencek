#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int countPairsWithDiffK(vector<int>& arr, int k) {
    sort(arr.begin(), arr.end()); 

    int count = 0;
    int left = 0, right = 1;
    int n = arr.size();

    while (right < n) {
        int diff = arr[right] - arr[left];

        if (diff == k) {
            count++;
            left++;
            right++;
        } 
        else if (diff < k) {
            right++;
        } 
        else { 
            left++;
            if (left == right) {
                right++;
            }
        }
    }

    return count;
}

int main() {
    vector<int> arr = {1, 5, 3, 4, 2};
    int k = 2;

    int result = countPairsWithDiffK(arr, k);
    cout << "Number of pairs with difference " << k << " is: " << result << endl;

    return 0;
}
